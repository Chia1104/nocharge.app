{
  "$schema": "https://json.schemastore.org/package",
  "name": "@nocharge/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "default": "./src/schema/index.ts"
    },
    "./env": {
      "types": "./src/env.ts",
      "default": "./src/env.ts"
    }
  },
  "scripts": {
    "db:push": "drizzle-kit push",
    "db:pull": "drizzle-kit pull",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "type:check": "tsc --noEmit",
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "db:check": "tsx --env-file=../../.env check.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "migrate:run": "tsx --env-file=../../.env migrate.ts"
  },
  "dependencies": {
    "@nocharge/kv": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "pg": "^8.16.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@chiastack/eslint": "catalog:chiastack",
    "@chiastack/tsconfig": "catalog:chiastack",
    "@nocharge/utils": "workspace:*",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "catalog:eslint",
    "typescript": "catalog:"
  }
}
