{
  "$schema": "https://json.schemastore.org/package",
  "name": "@nocharge/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./orpc/router": {
      "types": "./src/orpc/router.ts",
      "default": "./src/orpc/router.ts"
    },
    "./orpc/contracts": {
      "types": "./src/orpc/router.contract.ts",
      "default": "./src/orpc/router.contract.ts"
    }
  },
  "scripts": {
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type:check": "tsc --noEmit",
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@nocharge/auth": "workspace:*",
    "@nocharge/db": "workspace:*",
    "@nocharge/kv": "workspace:*",
    "@nocharge/utils": "workspace:*",
    "@orpc/contract": "catalog:orpc",
    "@orpc/server": "catalog:orpc",
    "@t3-oss/env-core": "catalog:",
    "client-only": "catalog:",
    "dayjs": "catalog:",
    "github-slugger": "^2.0.0",
    "graphql-request": "catalog:",
    "ky": "catalog:",
    "server-only": "catalog:",
    "superjson": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@chiastack/eslint": "catalog:chiastack",
    "@chiastack/tsconfig": "catalog:chiastack",
    "eslint": "catalog:eslint",
    "typescript": "catalog:"
  }
}
